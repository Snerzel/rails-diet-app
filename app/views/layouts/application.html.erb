<!DOCTYPE html>
<html>
  <head>
    <title>DietApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% if false %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% end %>
  </head>

  <body>
      <%= yield %>
  </body>
  <footer>
  <div>
    <% if logged_in? %>
      <% if !is_pro? %>
        <div>
          <a href="/users/:id">Profile</a>
          <a href="/logout_user">Logout</a>
        </div>
      <% else  %>
        <div>
          <a href="/pros/:id">Profile</a>
          <a href="/logout_pro">Logout</a>
        </div>
      <% end %>
    <% end %>
  </div>  
  </footer>
</html>
