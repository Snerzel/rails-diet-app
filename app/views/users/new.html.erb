<h1> Sign up as new user! </h1>

<%= form_tag("/users") do %>
    <p>
    <%= label_tag "Name:" %>
    <%= text_field_tag "name" %>
    </p>
    <p>
    <%= label_tag "Email:" %>
    <%= text_field_tag "email" %>
    </p>
    <p>
    <%= label_tag "Password:" %>
    <%= password_field_tag "password_digest" %>
    </p>
    <p>
    <%= label_tag "Age:" %>
    <%= text_field_tag "age" %>
    </p>
    <p>
    <%= label_tag "Weight:" %>
    <%= select_tag :weight, options_for_select(['Extremely Underweight', 'Underweight', 'Low Ideal', 'Ideal', 'High Ideal', 'Overweight', 'Obese'])%>
    </p>
    <p>
    <%= label_tag "Gender:" %>
    <%= select_tag :gender, options_for_select(['Bio Female', 'Bio Male', 'Other', 'Trans Man', 'Trans Woman']) %>
    </p>
    <p>
    <%= label_tag "Health:" %>
    <%= select_tag :health, options_for_select(['Great', 'Very Good', 'Okay', 'Not Great', 'Poor'])%>
    </p>
    <p>
    <%= label_tag "Diet Type:" %>
    <%= select_tag :diet_type, options_for_select(['Omnivorous', 'Vegetarian', 'Vegan', 'Gluten Free', 'Keto', 'Paleo', 'Carnivorous'])%>
    </p>
    <p>
    <%= label_tag "Diet restrictions:" %>
    <%= text_field_tag "restrictions" %>
    </p>
    <p>
    <%= submit_tag "Sign up!" %>
    <% end %>
    </p>

<%= Time.now %>